<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage"
    tools:context=".Otp_verify">
    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/assistant_bold"
                android:text="@string/otp_verification"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arvo_bold"
                android:text="@string/enter_otp_send_to_your_register_mobile_number"
                android:textSize="15dp">

            </TextView>
            <TextView
                android:id="@+id/numberGet"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <EditText
                android:layout_marginRight="5dp"
                android:id="@+id/otp1"
                android:maxLength="1"
                android:inputType="number"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:background="@drawable/box_otp">
            </EditText>
            <EditText
                android:layout_marginRight="5dp"
                android:id="@+id/otp2"
                android:maxLength="1"
                android:inputType="number"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:background="@drawable/box_otp">
            </EditText>
            <EditText
                android:layout_marginRight="5dp"
                android:id="@+id/otp3"
                android:maxLength="1"
                android:inputType="number"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:background="@drawable/box_otp">
            </EditText>
            <EditText

                android:layout_marginRight="5dp"
                android:id="@+id/otp4"
                android:maxLength="1"
                android:inputType="number"
                android:layout_width="45dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:background="@drawable/box_otp">
            </EditText>
            <EditText
                android:layout_marginRight="5dp"
                android:id="@+id/otp5"
                android:maxLength="1"
                android:inputType="number"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:background="@drawable/box_otp">
            </EditText>
            <EditText


                android:id="@+id/otp6"
                android:maxLength="1"
                android:inputType="number"
                android:layout_width="45dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:background="@drawable/box_otp">
            </EditText>

        </LinearLayout>
        <TextView
            android:id="@+id/resendOtp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/resend_otp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <Button
                android:onClick="verifySubmit"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="20dp"

                android:background="@drawable/rectangle_stroke">

            </Button>
            <ProgressBar
                android:id="@+id/progressbar2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:visibility="gone">

            </ProgressBar>

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>